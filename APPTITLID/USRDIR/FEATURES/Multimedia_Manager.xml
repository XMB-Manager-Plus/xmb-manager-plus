<?xml version="1.0" encoding="UTF-8"?>
<XMBML version="1.0">

	<!-- Main  > Multimedia Manager -->
	<View id="seg_multimediamanager">
		<Attributes>
			<Table key="multimediamanager">
				<Pair key="icon_rsc"><String>item_tex_ps3util</String></Pair>
				<Pair key="title"><String>LANG_TITL_MULTIMEDIAMANAGER-MAIN</String></Pair>
				<Pair key="info"><String>LANG_INFO_MULTIMEDIAMANAGER-MAIN</String></Pair>
				<Pair key="child"><String>segment</String></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="multimediamanager" attr="multimediamanager" src="#seg_multimediamanager_items"/>
		</Items>
	</View>

	<!-- Main  > Links > Submenu -->
	<View id="seg_multimediamanager_items">
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="multimediamanager_subitems" attr="multimediamanager_subitems" src="#seg_multimediamanager_subitems"/>
		</Items>
	</View>
	<View id="seg_multimediamanager_subitems">
