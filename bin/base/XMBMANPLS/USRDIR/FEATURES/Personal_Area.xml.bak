<?xml version="1.0" encoding="UTF-8"?>
<XMBML version="1.0">

	<!-- Main > Personal Area -->
	<View id="seg_personalarea">
		<Attributes>
			<Table key="personalarea">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/network.png</String></Pair>
				<Pair key="title"><String>LANG_TITL_PERSONALAREA-MAIN</String></Pair>
				<Pair key="info"><String>LANG_INFO_PERSONALAREA-MAIN</String></Pair>
				<Pair key="child"><String>segment</String></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="personalarea" attr="personalarea" src="#seg_personalarea_items"/>
		</Items>
	</View>

	<!-- Main  > Personal Area > Submenu -->
	<View id="seg_personalarea_items">
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="personalarea_subitems" attr="personalarea_subitems" src="#seg_personalarea_subitems"/>
		</Items>
	</View>
	<View id="seg_personalarea_subitems">
		<Attributes>
			<Table key="packages">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/pkgmanager.png</String></Pair>
				<Pair key="title"><String>LANG_TITL_PERSONALAREA-PACKAGES</String></Pair>
				<Pair key="info"><String>LANG_INFO_PERSONALAREA-PACKAGES</String></Pair>
			</Table>
			<Table key="folders">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/filemanager.png</String></Pair>
				<Pair key="title"><String>LANG_TITL_PERSONALAREA-FOLDERS</String></Pair>
				<Pair key="info"><String>LANG_INFO_PERSONALAREA-FOLDERS</String></Pair>
			</Table>
			<Table key="links">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/network.png</String></Pair>
				<Pair key="title"><String>LANG_TITL_PERSONALAREA-LINKS</String></Pair>
				<Pair key="info"><String>LANG_INFO_PERSONALAREA-LINKS</String></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query class="type:x-xmb/folder-pixmap" key="packages" attr="packages" src="#seg_personalarea_packages"/>
			<Query class="type:x-xmb/folder-pixmap" key="folders" attr="folders" src="#seg_personalarea_folders"/>
			<Query class="type:x-xmb/folder-pixmap" key="links" attr="links" src="#seg_personalarea_links"/>
		</Items>
	</View>

	<!-- Main > Personal Area > Packages -->
	<View id="seg_personalarea_packages">
		<Attributes>
			<!-- Packages attributes -->
			<Table key="p1">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/pkgmanager.png</String></Pair>
				<Pair key="title"><String>TITLE</String></Pair>
				<Pair key="info"><String>INFO</String></Pair>
				<Pair key="str_noitem"><String>msg_tool_no_package</String></Pair>
				<Pair key="child"><String>segment</String></Pair>
 			</Table>
		</Attributes>
		<Items>
			<!-- Packages items -->
			<Query class="type:x-xmb/xmlpackagefolder" key="p1" attr="p1" src="#seg_personalarea_packages_p1"/>
		</Items>
	</View>

	<!-- Packages subitems -->
	<View id="seg_personalarea_packages_p1"><Items><Query class="type:x-xmb/xmlpackagefolder" key="sp1" src="host://localhost/q?path=/dev_usb001&suffix=.pkg&subclass=x-host/package"/></Items></View>

	<!-- Main > Personal Area > Folders -->
	<View id="seg_personalarea_folders">
		<Attributes>
			<!-- Folders attributes -->
			<Table key="f1">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/filemanager.png</String></Pair>
				<Pair key="title"><String>TITLE</String></Pair>
				<Pair key="info"><String>INFO</String></Pair>
				<Pair key="str_noitem"><String>msg_no_data</String></Pair>
				<Pair key="child"><String>segment</String></Pair>
 			</Table>
		</Attributes>
		<Items>
			<!-- Folders items -->
			<Query class="type:x-xmb/folder-pixmap" key="f1" attr="f1" src="#seg_personalarea_folders_f1"/>
		</Items>
	</View>

	<!-- Folders subitems -->
	<View id="seg_personalarea_folders_f1"><Items><Query class="type:x-xmb/folder-pixmap" key="sf1" src="host://localhost/dev_usb001"/></Items></View>

	<!-- Main > Personal Area > Links -->
	<View id="seg_personalarea_links">
		<Attributes>
			<!-- Links attributes -->
			<Table key="l1">
				<Pair key="icon"><String>/dev_hdd0/game/XMBMANPLS/USRDIR/IMAGES/network.png</String></Pair>
				<Pair key="title"><String>TITLE</String></Pair>
				<Pair key="info"><String>INFO</String></Pair>
				<Pair key="module_name"><String>webbrowser_plugin</String></Pair>
				<Pair key="module_action"><String>http://www.ps3crunch.net/</String></Pair>
 			</Table>
		</Attributes>
		<Items>
			<!-- Links items -->
			<Item class="type:x-xmb/module-action" key="l1" attr="l1"/>
		</Items>
	</View>

</XMBML>
